@{
    Layout = null;
}



@{
    ViewData["Title"] = "Login";
}


<!doctype html>
<html lang="en" data-bs-theme="blue-theme">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CTNApp | Login</title>
    <!--favicon-->
    <link rel="icon" href="~/Template2/assets/images/favicon-32x32.png" type="image/png" asp-append-version="true">
    <!-- loader -->
    <link href="~/Template2/assets/css/pace.min.css" rel="stylesheet" asp-append-version="true">
    <script src="~/Template2/assets/js/pace.min.js" asp-append-version="true"></script>

    <!--plugins-->
    <link href="~/Template2/assets/plugins/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet" asp-append-version="true">
    <link href="~/Template2/assets/plugins/metismenu/metisMenu.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/Template2/assets/plugins/metismenu/mm-vertical.css" rel="stylesheet" asp-append-version="true">
    <!--bootstrap css-->
    <link href="~/Template2/assets/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons+Outlined" rel="stylesheet">
    <!--main css-->
    <link href="~/Template2/assets/css/bootstrap-extended.css" rel="stylesheet" asp-append-version="true">
    <link href="~/Template2/sass/main.css" rel="stylesheet" asp-append-version="true">
    <link href="~/Template2/sass/dark-theme.css" rel="stylesheet" asp-append-version="true">
    <link href="~/Template2/sass/blue-theme.css" rel="stylesheet" asp-append-version="true">
    <link href="~/Template2/sass/responsive.css" rel="stylesheet" asp-append-version="true">
</head>

<body>
    <!--authentication-->
    <div class="auth-basic-wrapper d-flex align-items-center justify-content-center">
        <div class="container-fluid my-5 my-lg-0">
            <div class="row">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5 col-xxl-4 mx-auto">
                    <div class="card rounded-4 mb-0 border-top border-4 border-primary border-gradient-1">
                        <div class="card-body p-5">
                            <img src="~/Template2/assets/images/logo1.png" class="mb-4" width="145" alt="">
                            <h4 class="fw-bold">Get Started Now</h4>
                            <p class="mb-0">Enter your credentials to login your account</p>

                            <div class="form-body my-5">
                                <form class="row g-3">
                                    <div class="col-12">
                                        <label for="inputEmailAddress" class="form-label">Your Email</label>
                                        <input type="email" class="form-control" id="inputEmailAddress" placeholder="CTN_Personnel@example.com">
                                    </div>
                                    <div class="col-12">
                                        <label for="inputChoosePassword" class="form-label">Your Password</label>
                                        <div class="input-group" id="show_hide_password">
                                            <input type="password" class="form-control border-end-0" id="inputChoosePassword" value="12345678" placeholder="Enter Password">
                                            <a href="javascript:;" class="input-group-text bg-transparent"><i class="bi bi-eye-slash"></i></a>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                            <label class="form-check-label" for="flexSwitchCheckChecked">Remember Me</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <a href="auth-basic-forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-grd btn-grd-deep-blue px-5">Login Now</button>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="text-start">
                                            <p class="mb-0">
                                                Don't have an account yet? <a asp-controller="Register" asp-action="Register">Sign up here</a>
                                            </p>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="separator section-padding">
                                <div class="line"></div>
                                <p class="mb-0 fw-bold">OR SIGN IN WITH</p>
                                <div class="line"></div>
                            </div>

                            <div class="d-flex gap-3 justify-content-center mt-4">
                                <a href="javascript:;" class="wh-42 d-flex align-items-center justify-content-center rounded-circle ">
                                    <i class="bi bi-google fs-5 text-white"></i>
                                </a>
                                <a href="javascript:;" class="wh-42 d-flex align-items-center justify-content-center rounded-circle ">
                                    <i class="bi bi-facebook fs-5 text-white"></i>
                                </a>
                                <a href="javascript:;" class="wh-42 d-flex align-items-center justify-content-center rounded-circle ">
                                    <i class="bi bi-linkedin fs-5 text-white"></i>
                                </a>
                                <a href="javascript:;" class="wh-42 d-flex align-items-center justify-content-center rounded-circle ">
                                    <i class="bi bi-github fs-5 text-white"></i>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div><!--end row-->
        </div>
    </div>
    <!--authentication-->
    <!--plugins-->
    <script src="~/Template2/assets/js/jquery.min.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $("#show_hide_password a").on('click', function (event) {
                event.preventDefault();
                if ($('#show_hide_password input').attr("type") == "text") {
                    $('#show_hide_password input').attr('type', 'password');
                    $('#show_hide_password i').addClass("bi-eye-slash-fill");
                    $('#show_hide_password i').removeClass("bi-eye-fill");
                } else if ($('#show_hide_password input').attr("type") == "password") {
                    $('#show_hide_password input').attr('type', 'text');
                    $('#show_hide_password i').removeClass("bi-eye-slash-fill");
                    $('#show_hide_password i').addClass("bi-eye-fill");
                }
            });
        });
    </script>
</body>
</html>
